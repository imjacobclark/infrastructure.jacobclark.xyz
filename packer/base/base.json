{
    "builders": [
        {
            "type": "digitalocean",
            "api_token": "{{API_KEY}}",
            "image": "ubuntu-16-04-x64",
            "region": "lon1",
            "size": "1gb"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./nginx/nginx.conf",
            "destination": "/etc/nginx.conf"
        },
        {
            "type": "file",
            "source": "./prometheus/prometheus.yml",
            "destination": "/etc/prometheus.yml"
        },
        {
            "type": "file",
            "source": "./packer/base/startup.sh",
            "destination": "/etc/startup.sh"
        },
        {
            "type": "shell",
            "script": "./packer/base/provision-containers.sh"
        }
    ]
}
