{
    "builders": [
        {
            "type": "digitalocean",
            "api_token": "{{API_KEY}}",
            "image": "ubuntu-16-04-x64",
            "region": "lon1",
            "size": "512mb"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./startup/startup.sh",
            "destination": "/etc/startup.sh"
        },
        {
            "type": "file",
            "source": "./systemd/startup-provisioner.service",
            "destination": "/etc/systemd/system/startup-provisioner.service"
        },
        {
            "type": "file",
            "source": "./prometheus/prometheus.yml",
            "destination": "/etc/prometheus.yml"
        },
        {
            "type": "file",
            "source": "./caddy/Caddyfile",
            "destination": "/etc/Caddyfile"
        },
        {
            "type": "file",
            "source": "./systemd/caddy.service",
            "destination": "/etc/systemd/system/caddy.service"
        },
        {
            "type": "file",
            "source": "./systemd/jekyll.service",
            "destination": "/etc/systemd/system/jekyll.service"
        },
        {
            "type": "shell",
            "script": "./provisioner/provision.sh"
        }
    ]
}
